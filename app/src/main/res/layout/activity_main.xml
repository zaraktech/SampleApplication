<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edLiablities"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Enter Total Liabilities"

        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="277dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edCash"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Enter Total Cash In Hand"

        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="167dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edBank"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Enter Total Cash in Bank"

        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="223dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EdGoldValue"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Enter Total Gold Value"

        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="38dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edSilverValue"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Enter Total Silver Value"

        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="106dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:text="Calculate"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="341dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="161dp"
        android:layout_height="39dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="340dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="TextView"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:autoSizeTextType="uniform"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="408dp" />

</androidx.constraintlayout.widget.ConstraintLayout>